<mapper namespace="com.mysite.restaurant.hj.mapper.UserMapper">

	<!-- 회원가입 -->
	<insert id="save" parameterType="com.mysite.restaurant.hj.domain.User">
		INSERT INTO users (email, PASSWORD, NAME, phone, notification_agreed)
		VALUES (#{email}, #{password}, #{name}, #{phone}, #{notification_agreed});
	</insert>
	
	<!-- 이메일 중복 여부 -->
	
	<!-- 로그인 -->
	<select id="findByUserEmail" resultType="com.mysite.restaurant.hj.domain.User">
		SELECT email, PASSWORD
		FROM users
		WHERE email = #{email};
	</select>
	
	<!-- 소셜 로그인 -->
	
	<!-- 내 정보 조회 -->
	<select id="selectUserProfile" resultType="com.mysite.restaurant.hj.domain.User">
		SELECT email, NAME, phone, notification_agreed
		FROM users
		WHERE user_id = #{user_id};
	</select>
	
	<!-- 내 정보 수정 -->
	<update id="updateUserProfile">
		UPDATE users
		SET NAME = #{name}, phone = #{phone}, notification_agreed = #{notification_agreed}
		WHERE email = #{email};
	</update>
	
	<!-- 회원 탈퇴 -->	
	<!-- 참조 데이터 삭제 -->
	<delete id="deleteUserReference">
		DELETE FROM review_replies
		WHERE user_id = (SELECT user_id FROM users WHERE email = #{email});
	</delete>
	<!-- 사용자 데이터 삭제 -->
	<delete id="deleteUser">
		DELETE FROM users
		WHERE email = #{email};
	</delete>
	
